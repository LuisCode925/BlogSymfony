{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tus Contibuciones{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container my-4">
        {% for article in posts %}
            <div class="card mb-4">
                <div class="row no-gutters">
                    <div class="col-sm-5 col-md-4 col-lg-3 d-flex align-items-center">
                        <a href="{{ asset('uploads/thumb/' ~ article.thumb )}}" data-lightbox="{{ article.thumb }}" data-title="{{ article.title }}">
                            <img class="card-img p-1" data-lightbox="{{ article.thumb }}" src="{{ asset('uploads/thumb/' ~ article.thumb )}}">
                        </a>
                    </div>
                    <div class="col-sm-7 col-md-8 col-lg-9">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text my-1">{{ article.content[:340] ~ '...' }}</p>
                            <a href="{{ path('app_show_post', {id: article.id}) }}" class="btn btn-primary mt-1">Ver Articulo</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
   
{% endblock %}
